<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 设置按钮 -->
    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/baseline_density_medium_24"
        android:contentDescription="@string/settings_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 大头照和信息部分 -->
    <LinearLayout
        android:id="@+id/profileContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/settingsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 大头照 -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_home_black_24dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/title_shop"
            android:background="@drawable/profile_picture_border" />

        <!-- 会员 ID -->
        <TextView
            android:id="@+id/memberID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="會員 ID: 12345678"
            android:textSize="18sp"
            android:textColor="#666666"
            android:gravity="center" />

        <TextView
            android:id="@+id/userRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="用戶身份: 普通用戶"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center" />

        <!-- 認證狀態 -->
        <TextView
            android:id="@+id/verificationStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="認證狀態: 未認證"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center" />

        <!-- 背包 -->
        <TextView
            android:id="@+id/backpackItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="背包物品數: 10"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center" />

        <!-- 能量点 -->
        <TextView
            android:id="@+id/energyPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="能量點: 500"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center" />

        <!-- 星光点 -->
        <TextView
            android:id="@+id/starlightPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="星光點: 300"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center" />

        <!-- 福报 -->
        <TextView
            android:id="@+id/fortunePoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="福報: 200"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center" />

        <!-- 祝福能量 -->
        <TextView
            android:id="@+id/blessingEnergy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="祝福能量: 400"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center" />
    </LinearLayout>

    <!-- 版本更新 -->
    <ListView
        android:id="@+id/versionListView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:background="@android:color/white" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登出"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="?android:attr/selectableItemBackground"/>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
